<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:textStyle="bold"
                android:text="@string/menu_about"
                android:textAlignment="center"
                android:textSize="30sp"
                android:background="@color/purple"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/aboutus1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="@string/introduceRest1"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/aboutus2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="@string/introduceRest2"
                android:textSize="23sp" />
            <TextView
                android:id="@+id/aboutus3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="@string/introduceRest3"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/aboutus4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textStyle="bold"
                android:text="@string/introduceRest4"
                android:textSize="23sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>